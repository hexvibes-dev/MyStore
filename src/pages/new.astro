---
import Layout2 from '../layouts/Layout2.astro';
import New from '../components/New/New.astro';
import Topbar from '../components/Topbar.astro';
import Header from '../components/Header.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const slides = [
  { src: "/img/new/new-bg1.webp", alt: "background", label: "New",   labelClass: "bg-watermeleon-shadow text-watermeleon" },
  { src: "/img/new/new-bg2.webp", alt: "background" },
  { src: "/img/new/new-bg3.webp", alt: "background", label: "Your decision",  labelClass: "bg-watermeleon-shadow text-watermeleon"}
];
---

<Layout2 title="Productos de New">
  <Topbar />
  <Header slides={slides} />
  <Navigation />
  <New titulo="Nuevos productos" />
  <Footer />
</Layout2>