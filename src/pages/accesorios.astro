---
import Layout2 from '../layouts/Layout2.astro';
import Accesorios from '../components/Ac/Accesorios.astro';
import Topbar from '../components/Topbar.astro';
import Header from '../components/Header.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import Back from '../components/Back.astro';

const slides = [
  { src: "/img/new/new-bg1.webp", alt: "background", label: "New",   labelClass: "bg-watermeleon-shadow text-watermeleon" },
  { src: "/img/new/new-bg2.webp", alt: "background" },
  { src: "/img/new/new-bg3.webp", alt: "background", label: "Your decision",  labelClass: "bg-watermeleon-shadow text-watermeleon"}
];
---

<Layout2 title="Productos de New">
  <Topbar />
  <Header slides={slides} />
  <Navigation theme="default" />
  <Accesorios titulo="Accesorios" />
  <Footer />
  <Back theme="default" />
</Layout2>