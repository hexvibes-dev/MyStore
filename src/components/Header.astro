---
const { slides } = Astro.props;
---

<header class="relative w-full h-56 md:h-64 overflow-hidden border-b border-white/10 animate__animated animate__fadeInDown animate__delay-1s" aria-label="Carrusel principal">
  <div class="w-full h-full overflow-hidden relative">
    <div id="carouselTrack" class="flex h-full will-change-transform touch-pan-y" aria-hidden="false">
      
      {slides.map(({ src, alt, label, labelClass }) => (
        <div class="min-w-full h-full relative select-none flex items-center justify-center">
          <img 
            src={src} 
            alt={alt}
            class="w-full h-full object-cover sm:w-full sm:h-full sm:object-cover md:w-auto md:h-auto md:max-h-[250px] md:object-contain md:mx-auto" />
          {label && (
            <span class={`absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 
                          px-4 py-2 rounded-lg font-bold text-base animate__animated animate__fadeInUp z-40 ${labelClass}`}>
              {label}
            </span>
          )}
        </div>
      ))}
    </div>
  </div>

  <button 
    id="btnPrev" 
    aria-label="Anterior" 
    class="absolute left-3 top-1/2 -translate-y-1/2 z-50 w-11 h-11 flex items-center justify-center rounded-lg bg-white/10 border border-white/10">
    <svg 
      width="24" 
      height="24" 
      viewBox="0 0 24 24" 
      fill="none" 
      stroke="#FF6B81" 
      stroke-width="2" 
      stroke-linecap="round" 
      stroke-linejoin="round">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
      <path d="M5 12l14 0" />
      <path d="M5 12l4 4" />
      <path d="M5 12l4 -4" />
    </svg>
  </button>
  <button id="btnNext" aria-label="Siguiente" class="absolute right-3 top-1/2 -translate-y-1/2 z-50 w-11 h-11 flex items-center justify-center rounded-lg bg-white/10 border border-white/10">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#FF6B81" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
      <path d="M5 12l14 0" />
      <path d="M15 16l4 -4" />
      <path d="M15 8l4 4" />
    </svg>
  </button>
</header>