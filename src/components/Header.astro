<header class="relative w-full h-56 md:h-64 overflow-hidden border-b border-white/10 animate__animated animate__fadeInDown animate__delay-1s" aria-label="Carrusel principal">
  <div class="w-full h-full overflow-hidden relative">
    <div id="carouselTrack" class="flex h-full will-change-transform touch-pan-y" aria-hidden="false">
      
      <!-- Slide: Destacados -->
      <div class="min-w-full h-full relative select-none flex items-center justify-center">
        <img src="/img/bg1.jpg" alt="background"
             class="w-full h-full object-cover sm:w-full sm:h-full sm:object-cover md:w-auto md:h-auto md:max-h-[250px] md:object-contain md:mx-auto">
        <span class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 
                     px-4 py-2 rounded-lg bg-orange-500/10 text-orange-500 font-bold text-base 
                     animate__animated animate__fadeInUp z-40">
          Destacados
        </span>
      </div>

      <!-- Slide: Nuevos -->
      <div class="min-w-full h-full relative select-none flex items-center justify-center">
        <img src="/img/bg2.jpg" alt="background"
             class="w-full h-full object-cover sm:w-full sm:h-full sm:object-cover md:w-auto md:h-auto md:max-h-[250px] md:object-contain md:mx-auto">
        <span class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 
                     px-4 py-2 rounded-lg bg-orange-500/10 text-orange-500 font-bold text-base 
                     animate__animated animate__fadeInUp z-40">
          Nuevos
        </span>
      </div>

      <!-- Slide: Ofertas -->
      <div class="min-w-full h-full relative select-none flex items-center justify-center">
        <img src="/img/bg3.jpg" alt="background"
             class="w-full h-full object-cover sm:w-full sm:h-full sm:object-cover md:w-auto md:h-auto md:max-h-[250px] md:object-contain md:mx-auto">
        <span class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 
                     px-4 py-2 rounded-lg bg-orange-500/10 text-orange-500 font-bold text-base 
                     animate__animated animate__fadeInUp z-40">
          Ofertas
        </span>
      </div>

      <!-- Slide: Colección -->
      <div class="min-w-full h-full relative select-none flex items-center justify-center">
        <img src="/img/bg4.jpg" alt="background"
             class="w-full h-full object-cover sm:w-full sm:h-full sm:object-cover md:w-auto md:h-auto md:max-h-[250px] md:object-contain md:mx-auto">
        <span class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 
                     px-4 py-2 rounded-lg bg-orange-500/10 text-orange-500 font-bold text-base 
                     animate__animated animate__fadeInUp z-40">
          Colección
        </span>
      </div>

      <!-- Slide: Exclusivo -->
      <div class="min-w-full h-full relative select-none flex items-center justify-center">
        <img src="/img/bg5.jpg" alt="background"
             class="w-full h-full object-cover sm:w-full sm:h-full sm:object-cover md:w-auto md:h-auto md:max-h-[250px] md:object-contain md:mx-auto">
        <span class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 
                     px-4 py-2 rounded-lg bg-orange-500/10 text-orange-500 font-bold text-base 
                     animate__animated animate__fadeInUp z-40">
          Exclusivo
        </span>
      </div>
    </div>
  </div>

  <!-- Botones -->
  <button id="btnPrev" aria-label="Anterior" class="absolute left-3 top-1/2 -translate-y-1/2 z-50 w-11 h-11 flex items-center justify-center rounded-lg bg-white/10 border border-white/20 hover:bg-white/20 transition">
    <span>⬅️</span>
  </button>
  <button id="btnNext" aria-label="Siguiente" class="absolute right-3 top-1/2 -translate-y-1/2 z-50 w-11 h-11 flex items-center justify-center rounded-lg bg-white/10 border border-white/20 hover:bg-white/20 transition">
    <span>➡️</span>
  </button>
</header>